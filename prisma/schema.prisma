generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id           Int @id @default(autoincrement())
  name         String
  email        String  @unique
  password     String
  role         Int // 100 = adm // 200 = columnist // 300 user
  points       Int?
  document     String?
  team         String?
  info         String?
  number       String?
  birthday     String?
  code         String?
  news         News[] @relation("NewsUser")
  palpitations  Palpitations[] @relation("palpitationUser")
  @@map("users")
}

model Championships {
  id           Int @id @default(autoincrement())
  name         String
  games        Games[] @relation("ChampioshipGames")
  championshipTeamPoints ChampionshipTeamPoints[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@map("championships")
}

model Games {
  id                 Int @id @default(autoincrement())
  name               String

  championship       Championships @relation("ChampioshipGames", fields: [championshipId], references: [id])
  championshipId     Int
  
  start              DateTime?
  finished           Boolean? @default(false)

  teamsGame          TeamsGame[] @relation("GameByTeams")
  palpitation        Palpitations[] @relation("palpitationGame")

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  @@map("games")
  
  @@index([championshipId])
}

model TeamsGame {
  id           Int @id @default(autoincrement())
  gol          Int @default(0)

  team         Teams @relation("TeamGames", fields: [teamId], references: [id])
  teamId       Int

  
  game         Games @relation("GameByTeams",  fields: [gameId], references: [id])
  gameId       Int

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@map("teamsGame")
  
  @@index([gameId])
  @@index([teamId])
}

model Teams {
  id           Int @id @default(autoincrement())
  name         String
  image        String?

  games        TeamsGame[] @relation("TeamGames")
  championshipTeamPoints ChampionshipTeamPoints[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@map("teams")
}

model News {
  
  id            Int @id @default(autoincrement())

  title         String
  content       String @db.VarChar(500)
  info          String?
  
  author       Users @relation("NewsUser", fields: [userId], references: [id])
  userId       Int

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("news")

  @@index([userId])
}

model Config {
  id            Int @id @default(autoincrement())
  name          String @unique
  value         String?

  @@map("config")
}

model Votes {
  id           Int @id @default(autoincrement())
  title        String

  options      Options[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@map("votes")
}

model Options {
  id           Int @id @default(autoincrement())
  title        String

  count        Int @default(0)

  vote         Votes @relation(fields: [voteId], references: [id], onDelete: Cascade)
  voteId       Int

  userVote     UserVote[] @relation("UserVote")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@map("options")
  @@index([voteId])
}

model UserVote {
  id           Int @id @default(autoincrement())

  optionId     Int
  userId       Int

  option       Options @relation("UserVote", fields: [optionId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("userVote")
  @@index([optionId])
}

model Palpitations {
  id           Int @id @default(autoincrement())

  firstTeamId  Int
  firstTeamGol Int @default(0)

  secondTeamId  Int
  secondTeamGol Int @default(0)

  user         Users @relation("palpitationUser", fields: [userId], references: [id])
  userId       Int

  game         Games @relation("palpitationGame", fields: [gameId], references: [id])
  gameId       Int

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("palpitations")
  @@index([userId])
  @@index([gameId])
}
model ChampionshipTeamPoints {
  id           Int @id @default(autoincrement())
  position     Int
  points       Int

  team         Teams @relation(fields: [teamId], references: [id])
  teamId       Int

  
  championships     Championships @relation(fields: [championshipsId], references: [id])
  championshipsId   Int

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@map("championshipTeamPoints")
  
  @@index([teamId])
  @@index([championshipsId])
}

